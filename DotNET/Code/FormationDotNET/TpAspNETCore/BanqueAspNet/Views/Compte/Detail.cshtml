@model Compte
<div class="container">
    @if (Model != null)
    {
        <div class="row m-1 justify-content-center align-items-center">
            <div class="col-4">
                Client : @Model.Client.Nom @Model.Client.Prenom @Model.Client.Telephone
            </div>
            <div class="col-2">
                Solde : @Model.Solde €
            </div>
        </div>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Date Opération</th>
                    <th scope="col">Montant</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Operation o in Model.Operations)
                {
                    <tr>
                        <th scope="row"></th>
                        <td>@o.DateOperation</td>
                        <td>@o.Montant €</td>                        
                    </tr>
                }
            </tbody>
        </table>

        <div class="row m-1 justify-content-center align-items-center">
            <a class="col-4 p-1 btn btn-success" asp-controller="Compte" asp-action="ActionOperation" asp-route-type="depot" asp-route-id="@Model.Id">Dépôt</a>
            <a class="col-4 p-1 btn btn-danger" asp-controller="Compte" asp-action="ActionOperation" asp-route-type="retrait" asp-route-id="@Model.Id">Retrait</a>
        </div>
    }

</div> 